    <div class="row">
        <div class="col-md-12 order-md-1">
            <h4 class="mb-3">Message</h4>
            <form class="needs-validation" action="/notifications" method="post" novalidate>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="country">Type</label>
